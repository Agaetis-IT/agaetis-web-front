{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "next-env.d.ts",
    "images.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
